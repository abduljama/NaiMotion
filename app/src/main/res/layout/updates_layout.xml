<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/news_card" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"

        android:layout_below="@+id/main_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:src="@drawable/riots"
            android:scaleType="fitXY"
            android:id="@+id/image" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:text="Riots in the CBD "
            android:background="#BC000000"
            android:layout_alignBottom="@+id/image"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:id="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeAgo"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="2 minutes ago"

            android:textSize="16dp"
            android:layout_below="@+id/desc"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="7dp"
            android:id="@+id/desc"
            android:text="Lorem ipsum dolor sit amet, ne mei quaeque euripidis. In pri animal habemus. Ad eam perpetua vituperata, sumo idque in mel. Nostrud blandit mei at, decore ceteros ex pri. Has zril invidunt cu, vide delenit ei nec."
            android:textSize="18dp"
            android:layout_below="@+id/image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

